import numpy as np

# Initialize parameters
T = 1000
x0 = 5
t = 200

# Calculate β_t directly for time t=200
beta_t = 0.0001 + (0.02 - 0.0001) * t / 1000  # Linear schedule at t=200

# Calculate α_t
alpha_t = 1 - beta_t

# Calculate ᾱ_t (alpha_bar)
alpha_bar = alpha_t ** t

# Calculate mean of p(xt|x0)
mean = np.sqrt(alpha_bar) * x0
print(f"Mean of p(xt|x0) = {mean:.4f}")